# Stage 1: Build Next.js app
FROM node:20-alpine AS build
WORKDIR /app

# Accept backend base URL as build argument
ARG BACKEND_URL=http://localhost:8080/api
ENV BACKEND_URL=${BACKEND_URL}

COPY cheko-app/package*.json ./
RUN npm ci || npm install

COPY cheko-app/ .

RUN sed -i "s#http://localhost:8080/api#${BACKEND_URL}#g" public/config.json

RUN npm run build

# Stage 2: Run Next.js server
FROM node:20-alpine AS runtime
WORKDIR /app
COPY --from=build /app ./
EXPOSE 3000
CMD ["npm", "start"]
