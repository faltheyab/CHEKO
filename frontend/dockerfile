# Stage 1: Build Next.js app
FROM node:20-alpine AS build
WORKDIR /app

COPY cheko-app/package*.json ./
RUN npm ci

COPY cheko-app/ .
RUN npm run build

# Stage 2: Run Next.js server
FROM node:20-alpine AS runtime
WORKDIR /app

# Copy all files needed for runtime
COPY --from=build /app ./

EXPOSE 3000
CMD ["npm", "start"]
